<div class="docs">
	<div class="docs-nav">
		{{#each docs}}
			<a class="docs-nav-section" href='#/{{ slug }}/'>{{ title }}</a>
			{{#each items }}
				{{#isnt @index 0}}
					<a class="docs-nav-item" href="#/{{ slug }}/">{{ title }}</a>
				{{/isnt}}
			{{/each}}
		{{/each}}
	</div>

	<div class="docs-content">
		{{#each docs}}
			<article class="section">
				<a class="target" name="/{{ slug }}/"></a>
				<h2><a href='#/{{ slug }}/'>{{ title }}</a></h2>
			</article>
			{{#each items }}
				<article class="method">
					<a class="target" name="/{{ slug }}/"></a>
					{{#isnt @index 0}}
						<h3>
							<a href='#/{{ slug }}/'>{{ title }}</a>
							<span>{{ version }}</span>
						</h3>
					{{/isnt}}
					<div class="prose">
						{{#if signature}}
							<pre>{{ signature }}</pre>
						{{/if}}
						{{#markdown}}
							{{{body}}}
						{{/markdown}}
					</div>
				</article>
			{{/each}}
		{{/each}}
	</div>
</div>